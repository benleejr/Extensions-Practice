{
  "manifest_version": 3,
  "name": "Indeed Interaction Extension",
  "version": "1.0",
  "description": "Clicks 'Apply Now' buttons on Indeed",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.indeed.com/*"],
      "js": ["clickApply.js"]
    }
  ]
}